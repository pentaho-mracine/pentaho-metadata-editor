<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

  <id>pme-ce</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>metadata-editor</baseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>libswt/linux/x86</outputDirectory>
      <includes>
        <include>org.eclipse.swt:org.eclipse.swt.gtk.linux.x86</include>
      </includes>
      <outputFileNameMapping>swt.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>libswt/linux/x86_64</outputDirectory>
      <includes>
        <include>org.eclipse.swt:org.eclipse.swt.gtk.linux.x86_64</include>
      </includes>
      <outputFileNameMapping>swt.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>libswt/osx64</outputDirectory>
      <includes>
        <include>org.eclipse.swt:org.eclipse.swt.cocoa.macosx.x86_64</include>
      </includes>
      <outputFileNameMapping>swt.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>libswt/win32</outputDirectory>
      <includes>
        <include>org.eclipse.swt:org.eclipse.swt.win32.win32.x86</include>
      </includes>
      <outputFileNameMapping>swt.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>libswt/win64</outputDirectory>
      <includes>
        <include>org.eclipse.swt:org.eclipse.swt.win32.win32.x86_64</include>
      </includes>
      <outputFileNameMapping>swt.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>plugins</outputDirectory>
      <includes>
        <include>pentaho:pentaho-big-data-plugin:zip:${project.version}</include>
        <include>pentaho:pentaho-cassandra-plugin:zip:${project.version}</include>
      </includes>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>plugins</outputDirectory>
      <includes>
        <include>pentaho:pdi-dataservice-client-plugin</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
    <!-- Include pentaho-karaf-assembly-pme in system folder -->
    <fileSet>
      <directory>${project.build.directory}/system</directory>
      <outputDirectory>system</outputDirectory>
    </fileSet>
  </fileSets>

</assembly>
