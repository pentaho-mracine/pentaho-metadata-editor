<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

  <id>pme-ce</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>metadata-editor</baseDirectory>
  
  <dependencySets>
    <dependencySet>
	  <outputDirectory>lib</outputDirectory>
	  <includes>
	    <include>pentaho:pentaho-metadata-editor</include>
	  </includes>
	</dependencySet>
	<dependencySet>
	  <outputDirectory>libext/JDBC</outputDirectory>
	  <includes>
	    <include>com.h2database:h2</include>
		<include>org.hsqldb:hsqldb</include>
	  </includes>
	</dependencySet>
	<!--
	<dependencySet>
	  <outputDirectory>libext/pentaho</outputDirectory>
	</dependencySet>
	-->
	<dependencySet>
	  <outputDirectory>libswt/linux/x86</outputDirectory>
	  <includes>
	    <include>org.eclipse.swt:org.eclipse.swt.gtk.linux.x86</include>
	  </includes>
	  <outputFileNameMapping>swt.jar</outputFileNameMapping>
	</dependencySet>
	<dependencySet>
	  <outputDirectory>libswt/linux/x86_64</outputDirectory>
	  <includes>
	    <include>org.eclipse.swt:org.eclipse.swt.gtk.linux.x86_64</include>
	  </includes>
	  <outputFileNameMapping>swt.jar</outputFileNameMapping>
	</dependencySet>
	<dependencySet>
	  <outputDirectory>libswt/osx64</outputDirectory>
	  <includes>
	    <include>org.eclipse.swt:org.eclipse.swt.cocoa.macosx.x86_64</include>
	  </includes>
	  <outputFileNameMapping>swt.jar</outputFileNameMapping>
	</dependencySet>
	<dependencySet>
	  <outputDirectory>libswt/win32</outputDirectory>
	  <includes>
	    <include>org.eclipse.swt:org.eclipse.swt.win32.win32.x86</include>
	  </includes>
	  <outputFileNameMapping>swt.jar</outputFileNameMapping>
	</dependencySet>
	<dependencySet>
	  <outputDirectory>libswt/win64</outputDirectory>
	  <includes>
	    <include>org.eclipse.swt:org.eclipse.swt.win32.win32.x86_64</include>
	  </includes>
	  <outputFileNameMapping>swt.jar</outputFileNameMapping>
	</dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
	  <directory>src/main/resources</directory>
	  <outputDirectory></outputDirectory>
	</fileSet>
  </fileSets>

</assembly>
